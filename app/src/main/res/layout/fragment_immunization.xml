<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollView1"
    android:background="#000000"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="40dp"
        android:paddingTop="50dp"
        android:paddingBottom="80dp"
        android:paddingEnd="40dp"
        tools:context=".ImmunizationActivity"
        android:background="@drawable/bg_rounded_10_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textImunisasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Imunisasi Anak" />

        <TextView
            android:id="@+id/textcaramengatasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Apakah anak sudah di imunisasi?" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_10_bluemuda">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_15_blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/textAnakKeBerapa"
                    android:paddingStart="19dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:text="Anak Pertama"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonPilih"
                        android:layout_width="75dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:theme="@style/Button.Primary"
                        android:background="@drawable/bg_rounded_30"
                        android:textColor="@color/white"
                        android:text="Pilih"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_rounded_30">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginEnd="75dp"
                    android:background="@drawable/bg_rounded_15_blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTahun1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0 - 1 Tahun"
                        android:textSize="15dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@id/imageView"
                        android:src="@drawable/imunisasi1"
                        android:layout_gravity="start"
                        android:layout_width="150dp"
                        android:layout_height="100dp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBoxbsg"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:text="BCG" />

                        <CheckBox
                            android:id="@+id/checkBoxrota"
                            android:layout_width="98dp"
                            android:layout_height="20dp"
                            android:text="Rotavirus" />

                        <CheckBox
                            android:id="@+id/checkBoxpolio"
                            android:layout_width="88dp"
                            android:layout_height="20dp"
                            android:text="Polio" />

                        <CheckBox
                            android:id="@+id/checkBoxpcv"
                            android:layout_width="89dp"
                            android:layout_height="20dp"
                            android:text="PCV" />

                        <CheckBox
                            android:id="@+id/checkBoxHepaB"
                            android:layout_width="106dp"
                            android:layout_height="20dp"
                            android:text="Hepatitis B" />

                        <CheckBox
                            android:id="@+id/checkBoxcampak"
                            android:layout_width="89dp"
                            android:layout_height="20dp"
                            android:text="Campak" />

                        <CheckBox
                            android:id="@+id/checkBoxDPT"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="DPT"
                            android:layout_marginBottom="5dp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_rounded_30">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginEnd="75dp"
                    android:background="@drawable/bg_rounded_15_blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTahun2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1- 4 Tahun"
                        android:textSize="15dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@id/imageView"
                        android:src="@drawable/imunisasi3"
                        android:layout_gravity="start"
                        android:layout_width="150dp"
                        android:layout_height="100dp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/checkBoxDPT2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="DPT" />

                        <CheckBox
                            android:id="@+id/checkBoxTifoid"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Tifoid" />

                        <CheckBox
                            android:id="@+id/checkBoxPolio2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Polio" />

                        <CheckBox
                            android:id="@+id/checkBoxHepaA"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:text="Hepatitis A" />

                        <CheckBox
                            android:id="@+id/checkBoxpcv2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="PCV" />

                        <CheckBox
                            android:id="@+id/checkBoxVarisela"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Varisela" />

                        <CheckBox
                            android:id="@+id/checkBoxMMR"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="MMR"
                            android:layout_marginBottom="5dp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_rounded_30">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginEnd="75dp"
                    android:background="@drawable/bg_rounded_15_blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTahun3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="5-12 Tahun"
                        android:textSize="15dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@id/imageView"
                        android:src="@drawable/imunisasi3"
                        android:layout_gravity="start"
                        android:layout_width="150dp"
                        android:layout_height="100dp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/checkBoxDPT3"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="DPT"
                            tools:layout_editor_absoluteX="110dp"
                            tools:layout_editor_absoluteY="461dp" />

                        <CheckBox
                            android:id="@+id/checkBoxTifoid2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Tifoid"
                            tools:layout_editor_absoluteX="110dp"
                            tools:layout_editor_absoluteY="488dp" />

                        <CheckBox
                            android:id="@+id/checkBoxPolio3"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Polio"
                            tools:layout_editor_absoluteX="110dp"
                            tools:layout_editor_absoluteY="511dp" />

                        <CheckBox
                            android:id="@+id/checkBoxHepaA2"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:text="Hepatitis A"
                            tools:layout_editor_absoluteX="110dp"
                            tools:layout_editor_absoluteY="534dp" />

                        <CheckBox
                            android:id="@+id/checkBoxpcv3"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="PCV"
                            tools:layout_editor_absoluteX="110dp"
                            tools:layout_editor_absoluteY="561dp" />

                        <CheckBox
                            android:id="@+id/checkBoxVarisela2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Varisela"
                            tools:layout_editor_absoluteX="213dp"
                            tools:layout_editor_absoluteY="461dp" />

                        <CheckBox
                            android:id="@+id/checkBoxMMR2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="MMR"
                            tools:layout_editor_absoluteX="213dp"
                            tools:layout_editor_absoluteY="488dp" />

                        <CheckBox
                            android:id="@+id/checkBoxInflu2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Influenza"
                            tools:layout_editor_absoluteX="213dp"
                            tools:layout_editor_absoluteY="511dp" />

                        <CheckBox
                            android:id="@+id/checkBoxCampak3"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Campak"
                            tools:layout_editor_absoluteX="214dp"
                            tools:layout_editor_absoluteY="534dp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>