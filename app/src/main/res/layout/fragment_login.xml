<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment"
    android:background="#E2F1F8"
    android:paddingTop="50dp"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="332dp"
        android:layout_height="127dp"
        android:src="@drawable/image1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Masuk Akun" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_rounded"
        android:ems="10"
        android:hint="  Email"
        android:layout_marginBottom="15dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_rounded"
        android:ems="10"
        android:hint="  Buat Kata Sandi"
        android:layout_marginBottom="25dp"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="atau masuk dengan akun \nGoogle atau Facebook"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_rounded_30"
            android:fontFamily="@font/facebolf"
            android:text="f"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="40dp"
            android:theme="@style/Button.Primary"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp


"
            android:background="@drawable/bg_rounded_30"
            android:fontFamily="@font/productsans"
            android:text="G"
            android:textColor="#808080"
            android:textSize="40dp"
            android:theme="@style/Button.Primary" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="50dp">

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_15_blue"
            android:text="Masuk"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:theme="@style/Button.Primary"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>