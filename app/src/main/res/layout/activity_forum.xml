<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="40dp"
    android:paddingTop="50dp"
    android:paddingEnd="40dp"
    android:orientation="vertical"
    android:background="#E2F1F8"
    tools:context=".ForumActivity">

    <TextView
        android:id="@+id/textforum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Forum" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_10_bluemuda">

        <TextView
            android:id="@+id/textpernyataan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Artikel Anak" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="start"
            android:background="@drawable/bg_rounded_30">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_gravity="start"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/image1" />

            <Button
                android:id="@+id/buttonuser1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:theme="@style/Button.Transparent"
                android:background="@drawable/bg_rounded_30"
                android:text="Bu Ajeng\n Bu, permisi saya mau tanya susu yang bagus untuk umur 3 tahun apa ya?" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="start"
            android:background="@drawable/bg_rounded_30">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_gravity="start"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/image1" />

            <Button
                android:id="@+id/buttonuser2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:theme="@style/Button.Transparent"
                android:background="@drawable/bg_rounded_30"
                android:text="Ibu Sri\nBagaimana cara mengatur emosi untuk tidak melampiaskan ke anak?" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <Button
            android:id="@+id/buttondiskusi"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Tambahkan Diskusi"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="175dp"
            android:theme="@style/Button.Transparent"
            android:background="@drawable/bg_rounded_30"
            android:textColor="@color/black"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>