<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="40dp"
    android:paddingTop="50dp"
    android:paddingEnd="40dp"
    tools:context=".ComplaintActivity">

    <TextView
        android:id="@+id/textkeluhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="20dp"
        android:text="Keluhan Anak" />

    <TextView
        android:id="@+id/textamengatasi"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="68dp"
        android:layout_toRightOf="@id/textkeluhan"
        android:text="cara mengatasinya" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/textamengatasi"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textsumber"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="230dp"
        android:layout_below="@id/imageView"
        android:text="Demam" />

    <TextView
        android:id="@+id/textcarasembuh"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="90dp"
        android:layout_below="@id/textsumber"
        android:text="1. Berikan kompres" />

    <TextView
        android:id="@+id/textcarasembuh2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:layout_below="@id/textcarasembuh"
        android:text="2. Hindari baju tebal" />

    <TextView
        android:id="@+id/textcarasembuh3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/textcarasembuh2"
        android:text="3. Makanan dan minum yang cukup" />

    <TextView
        android:id="@+id/textcarasembuh4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="140dp"
        android:layout_below="@id/textcarasembuh3"
        android:text="4. Jaga suhu ruangan" />

    <TextView
        android:id="@+id/textcarasembuh5"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_below="@id/textcarasembuh4"
        android:text="5. Mandikan dengan air hangat" />

    <TextView
        android:id="@+id/textcarasembuh6"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/textcarasembuh5"
        android:text="6. Beri obat-obatan pereda demam" />

    <TextView
        android:id="@+id/textperingatan"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="70dp"
        android:layout_below="@id/textcarasembuh6"
        android:text="jika demam semakin parah maka anak harus dilarikan ke dokter terdekat!" />

</RelativeLayout>